<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="CellPostEditTextStyle">
		<item name="@android:layout_height">45px</item>
		<item name="@android:layout_width">fill_parent</item>
		<item name="@android:layout_marginBottom">15px</item>
	</style>
	
	<style name="CellPostFormLabelStyle">
		<item name="@android:textSize">15sp</item>
		<item name="@android:textColor">#000000</item>
		<item name="@android:layout_width">fill_parent</item>
		<item name="@android:layout_height">30px</item>
	</style>
	
	<style name="CellPostFormLabelSmallerStyle">
		<item name="@android:textColor">#000000</item>
		<item name="@android:layout_width">fill_parent</item>
		<item name="@android:layout_height">wrap_content</item>
	</style>
	
	<style name="CellPostFormCheckboxStyle">
		<item name="@android:textSize">12sp</item>
		<item name="@android:textColor">#000000</item>
		<item name="@android:layout_width">fill_parent</item>
		<item name="@android:layout_height">40px</item>
	</style>
	
	<style name="CellPostFormLayoutStyle">
		<item name="android:isScrollContainer">true</item>
		<item name="android:scrollbars">vertical</item>
		<item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
		<item name="android:background">#754C78</item>
		<item name="android:padding">10px</item>
		<item name="@android:layout_width">fill_parent</item>
		<item name="@android:layout_height">fill_parent</item>
	</style>
	
	<style name="CellPostListItemStyle">
		<item name="@android:textSize">15sp</item>
		<item name="@android:textColor">#000000</item>
		<item name="@android:layout_width">fill_parent</item>
		<item name="@android:layout_height">wrap_content</item>
	</style>
	
	<style name="CellPostMenuListLayoutStyle">
		<item name="android:background">#754C78</item>
		<item name="@android:textSize">20sp</item>
		<item name="@android:textColor">#000000</item>
		<item name="@android:layout_width">fill_parent</item>
		<item name="@android:layout_height">fill_parent</item>
		<item name="@android:paddingLeft">8dp</item>
		<item name="@android:paddingRight">8dp</item>
		<item name="@android:gravity">center</item>
	</style>
	
	<style name="CellPostMenuListStyle">
		<item name="@android:layout_width">fill_parent</item>
		<item name="@android:layout_height">wrap_content</item>
		<item name="@android:layout_weight">1</item>
		<item name="@android:drawSelectorOnTop">false</item>
		<item name="@android:choiceMode">singleChoice</item>
	</style>
	
	<style name="CellPostBiggerMenuListItemStyle">
		<item name="@android:textSize">20sp</item>
		<item name="@android:textColor">#000000</item>
		<item name="@android:layout_width">fill_parent</item>
		<item name="@android:layout_height">60px</item>
		<item name="@android:layout_weight">1</item>
		<item name="@android:gravity">center</item>
	</style>
</resources>
